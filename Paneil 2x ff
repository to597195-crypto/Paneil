    <script>
        // ‚úÖ Password login
        function checkPassword() {
            const input = document.getElementById("password").value;
            const correct = "1234"; // üîë Cambia qui la tua password
            if (input === correct) {
                document.getElementById("login-box").style.display = "none";
                document.getElementById("panel").style.display = "block";
            } else {
                alert("‚ùå Password incorrecta");
            }
        }

        // ‚öôÔ∏è Funzioni pannello (uguali al tuo codice)
        function toggleOption(optionName, isChecked) {
            const audio = new Audio('https://www.soundjay.com/button/sounds/beep-07.mp3');
            audio.play();

            if (isChecked) {
                console.log(`${optionName} activado`);
                alert(`${optionName} activado`);
            } else {
                console.log(`${optionName} desactivado`);
                alert(`${optionName} desactivado`);
            }
        }
    </script>
